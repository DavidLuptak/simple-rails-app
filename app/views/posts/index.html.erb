<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr id=<%= "post-row-#{post.id}" %>>
        <td>
          <div class="post-author">
            <%= post.author %>
          </div>
        </td>
        <td>
          <div class="post-title">
            <%= post.title %>
          </div>
        </td>
        <td>
          <div class="post-body">
            <%= post.body %>
          </div>
        </td>
        <td>
          <div class="post-tags">
            <%= post.tags.map {|tag| tag.name}.join(', ') %>
          </div>
        </td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

