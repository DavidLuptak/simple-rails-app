<p id="notice"><%= notice %></p>

<h1>
  <%= link_to 'Posts', root_path %>
</h1>

<div class="row">
  <h2>Filter by tag</h2>
  <% @tags.each do |tag| %>
    <%= link_to tag.name, {action: :filter, tag_name: tag.name}, class: "filter-by-tag" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr id="post-row-<%= post.id %>" >
        <td>
          <div class="post-author">
            <%= post.author %>
          </div>
        </td>
        <td>
          <div class="post-title">
            <%= post.title %>
          </div>
        </td>
        <td>
          <div class="post-body">
            <%= post.body %>
          </div>
        </td>
        <td>
          <div class="post-tags">
            <%= post.tags.map {|tag| tag.name}.join(', ') %>
          </div>
        </td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
